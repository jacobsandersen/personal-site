---
import { Content, isString } from '~/lib/content'
import TextRenderer from './TextRenderer.astro'
import HtmlRenderer from './HtmlRenderer.astro'

interface Props {
    content: Content[]
    preview?: boolean,
    raw?: boolean
}

const { content, preview = false, raw = false } = Astro.props as Props
---

{content.map(piece => {
    if (isString(piece)) {
        return <TextRenderer text={piece} preview={preview} raw={raw} />
    } else {
        return <HtmlRenderer html={piece.html} preview={preview} />
    }
})}
