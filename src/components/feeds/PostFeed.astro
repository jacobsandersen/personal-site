---
import { queryPosts } from "~/lib/scribble/scribble";
import HFeedRenderer from "../microformat/hfeed/HFeedRenderer.astro";

interface Props {
    class?: string;
}

const queryParams = {
    type: 'h-entry'
};

const results = await queryPosts(queryParams);
---

<HFeedRenderer posts={results} feedInfo={{title: "Recent Posts", url:"/", headerConfig: { level: 2 }}} class={Astro.props.class} />