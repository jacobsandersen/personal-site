---
import SiteHeader from '~/components/SiteHeader.astro'
import BaseLayout from './BaseLayout.astro'

interface Props {
    title?: string
}

const { title } = Astro.props as Props
---

<BaseLayout pageTitle={title}>
    <SiteHeader shouldMarkupAuthor={true} />
    <main class="tw:pb-8">
        <slot />
    </main>
</BaseLayout>