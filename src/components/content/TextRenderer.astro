---
import clip from '@arendjr/text-clipper'

interface Props {
    text: string
    preview?: boolean,
    raw?: boolean
}

const { text, preview = false, raw = false } = Astro.props as Props

const PREVIEW_MAX_CHARS = 300
const rendered = preview ? clip(text, PREVIEW_MAX_CHARS) : text
---

{ raw ? rendered : <p>{rendered}</p> }
