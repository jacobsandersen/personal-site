---
import { Post } from "~/lib/content";
import ArticlePost from "./ArticlePost.astro";
import CheckinPost from "./CheckinPost.astro";
import LikePost from "./LikePost.astro";
import NotePost from "./NotePost.astro";
import RepostPost from "./RepostPost.astro";
import RsvpPost from "./RsvpPost.astro";
import BookmarkPost from "./BookmarkPost.astro";
import PhotoPost from "./PhotoPost.astro";
import ReplyPost from "./ReplyPost.astro";

interface Props {
    content: Post;
    preview?: boolean;
}

const { content, preview = false } = Astro.props as Props;
---

{
    (() => {
        switch (content.type) {
            case "article":
                return <ArticlePost article={content} preview={preview} />
            case "checkin":
                return <CheckinPost checkin={content} preview={preview} />
            case "like":
                return <LikePost like={content} preview={preview} />
            case "note":
                return <NotePost note={content} preview={preview} />
            case "repost":
                return <RepostPost repost={content} preview={preview} />
            case "rsvp":
                return <RsvpPost rsvp={content} preview={preview} />
            case "photo":
                return <PhotoPost photo={content} preview={preview} />
            case "reply":
                return <ReplyPost reply={content} preview={preview} />
            case "bookmark":
                return <BookmarkPost bookmark={content} preview={preview} />
        }
    })()
}
