---
import { Mf2Document } from "~/types/mf2-document";
import MicroformatRenderer from "~/components/microformat/MicroformatRenderer.astro";

interface Props {
    posts: Mf2Document[];
}

const { posts } = Astro.props as Props;
---

{
    posts.length === 0 ? (
        <p>No posts found.</p>
    ) : (
        <div class="tw:flex tw:flex-col tw:gap-y-6">
            {posts.map((post) => (
                <MicroformatRenderer doc={post} preview={true} />
            ))}
        </div>
    )
}
