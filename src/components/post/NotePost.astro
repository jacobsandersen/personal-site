---
import { Note } from '~/lib/content'
import StylizedQuote from '../post-fragments/StylizedQuote.astro'
import ContentRenderer from '../content/ContentRenderer.astro'

interface Props {
    note: Note
    preview?: boolean
}

const { note, preview = false } = Astro.props as Props
---

<StylizedQuote class={[]}>
    <ContentRenderer content={note.content} preview={preview} />
</StylizedQuote>