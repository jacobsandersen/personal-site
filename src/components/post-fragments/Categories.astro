---
interface Props {
    categories: string[];
}

const { categories } = Astro.props as Props;
---

<ul class="tw:list-none tw:flex tw:gap-2 tw:text-sm">
    {
        categories.length ? (
            categories.map((category) => (
                <li class="tw:hover:underline tw:decoration-wavy">
                    <a href={`/tagged/${category}`}>#{category}</a>
                </li>
            ))
        ) : (
            <li class="tw:hover:underline tw:decoration-wavy">
                <a href={`/uncategorized`}>#uncategorized</a>
            </li>
        )
    }
</ul>
